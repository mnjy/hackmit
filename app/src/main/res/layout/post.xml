<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium_small"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="@dimen/pic_size"
            android:layout_height="@dimen/pic_size"
            android:background="@color/dark_yellow"/>
        <!-- ADD PIC SOURCE-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_smaller"
            android:layout_marginLeft="@dimen/margin_medium_small"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_header"
                tools:text="POST HERE"/>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="@dimen/text_details"-->
                <!--tools:text="DETAILS"/>-->


            <LinearLayout
                android:id="@+id/toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- percentage, # of upvotes, downvotes, comments -->

                <Button
                    android:id="@+id/upvoteButton"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_margin="@dimen/margin_tiny"
                    android:background="@color/red" />

                <Button
                    android:id="@+id/downvoteButton"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_margin="@dimen/margin_tiny"
                    android:background="@color/red" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>